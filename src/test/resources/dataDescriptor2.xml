<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!--
  retrieve title and date of all compositions by Johann Sebastian Bach
  and store them in maps using the BWV index as key
-->
<dataDescriptor>
	<workflow>
		<request url="https://en.wikipedia.org/wiki/List_of_compositions_by_Johann_Sebastian_Bach" />
		<saveMap var="compositionNames">
			<key path="//table[@class='wikitable sortable']/tbody/tr[not(td[@colspan='8'])]/td[1]" />
			<value path="//table[@class='wikitable sortable']/tbody/tr[not(td[@colspan='8'])]/td[4]" />
		</saveMap>
		<saveMap var="compositionDates">
			<key path="//table[@class='wikitable sortable']/tbody/tr[not(td[@colspan='8'])]/td[1]" />
			<value path="//table[@class='wikitable sortable']/tbody/tr[not(td[@colspan='8'])]/td[3]" />
		</saveMap>
	</workflow>
</dataDescriptor>